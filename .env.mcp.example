# Add these to your .env file to configure MCP servers

# =============================================================================
# MCP (Model Context Protocol) Configuration
# =============================================================================

# Enable/disable MCP servers entirely
MCP_ENABLED=true

# MCP server timeout (seconds)
MCP_TIMEOUT=30

# Number of retry attempts for failed MCP connections
MCP_RETRY_ATTEMPTS=3

# Continue running if MCP servers fail (recommended: true)
MCP_FALLBACK_ON_ERROR=true

# Individual MCP server controls
# Only enable servers that you know work in your environment

# Filesystem access (usually works)
MCP_FILESYSTEM_ENABLED=true
MCP_FILESYSTEM_ALLOWED_DIRS=D:\Short_Url-AI_Agent

# Browser automation (may cause issues, disabled by default)
MCP_BROWSER_ENABLED=false

# Memory server (disabled by default)
MCP_MEMORY_ENABLED=false

# Sequential thinking (disabled by default)
MCP_SEQUENTIAL_THINKING_ENABLED=false

# Error handling
MCP_LOG_ERRORS=true
MCP_CONTINUE_ON_ERROR=true
MCP_MAX_CONSECUTIVE_FAILURES=5

# Debug mode (for troubleshooting)
MCP_DEBUG=false
MCP_LOG_REQUESTS=false
MCP_LOG_RESPONSES=false